# Voice Social App Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Primary database URL (Railway, Neon, Supabase, etc.)
DATABASE_URL="postgresql://username:password@host:port/database"

# Alternative database URLs (fallback options)
RAILWAY_DATABASE_URL="postgresql://username:password@host:port/database"
DIRECT_URL="postgresql://username:password@host:port/database"
NEXT_PUBLIC_DATABASE_URL="postgresql://username:password@host:port/database"
FALLBACK_DATABASE_URL="postgresql://username:password@host:port/database"

# ===========================================
# APPLICATION URL
# ===========================================
# Your app's public URL (for Farcaster mini app)
NEXT_PUBLIC_URL="https://your-app-domain.com"

# ===========================================
# PUSHER CONFIGURATION (Optional)
# ===========================================
# Real-time notifications (optional - can be removed if not used)
PUSHER_APP_ID="your-pusher-app-id"
NEXT_PUBLIC_PUSHER_KEY="your-pusher-key"
PUSHER_SECRET="your-pusher-secret"
NEXT_PUBLIC_PUSHER_CLUSTER="ap1"

# ===========================================
# FARCaster MINI APP CONFIGURATION
# ===========================================
# These are automatically configured for Farcaster mini app
# No additional configuration needed

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Node environment
NODE_ENV="development"

